<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:focusable="true"
                                                   android:focusableInTouchMode="true">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_input"
            android:hint="@string/user_cloudflare_email"
            android:textSize="24dp" android:layout_marginTop="45dp"
            android:autofillHints="email"
            android:importantForAutofill="auto"
            app:layout_constraintTop_toBottomOf="@+id/info" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:targetApi="o" />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:maxLength="37"
            android:id="@+id/api_key_input"
            android:hint="@string/user_cloudflare_global_api_key"
            android:textSize="24dp" android:layout_marginTop="40dp"
            android:autofillHints="password"
            android:importantForAutofill="auto"
            app:layout_constraintTop_toBottomOf="@+id/email_input" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:targetApi="o" />
    <Button
            android:text="@string/user_save"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/save_button"
            android:textColor="#FFF"
            android:background="@drawable/button"
            android:textSize="24dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/api_key_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/user_instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/info" android:textSize="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
    <TextView
            android:text="@string/user_cloudflare_email_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/email_input"
            android:textSize="24dp" app:layout_constraintStart_toStartOf="@+id/email_input"
    />
    <TextView
            android:text="@string/user_api_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/api_key_input"
            android:textSize="24dp" app:layout_constraintStart_toStartOf="@+id/api_key_input"
    />


</androidx.constraintlayout.widget.ConstraintLayout>